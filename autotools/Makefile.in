CXX=$CXX
CXXFLAGS=$CXXFLAGS
LDFLAGS=$LDFLAGS
SRC=$SRC
OBJ=$(SRC:.cpp=.o)
TARGET=$TARGET

all: $(TARGET)

$(TARGET): $(OBJ)
    $(CXX) $(CXXFLAGS) $(OBJ) -o $(TARGET) $(LDFLAGS)

%.o: %.cpp
    $(CXX) $(CXXFLAGS) -c $< -o $@

clean:
    rm -f $(OBJ)

fclean: clean
    rm -f $(TARGET)

re: fclean all

.PHONY: all clean fclean re